{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "jsx": "react",
    "esModuleInterop": true,
    // "strict": true,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom", "chrome"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/client", "src/types", "__tests__/**/*"],
  "exclude": ["node_modules", "build", "jest.config.ts", "src/extensions/**/*"]
}
